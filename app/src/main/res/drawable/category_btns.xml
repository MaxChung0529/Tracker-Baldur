<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/light_gray"/>
            <size
                android:height="40dp"
                android:width="100dp"/>
            <corners
                android:radius="8dp"/>

            <stroke android:width="2.5px" android:color="@color/purple" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>


</layer-list>