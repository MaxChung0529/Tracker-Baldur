<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDetailsPopUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/catColor"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:insetLeft="12dp"
            android:insetRight="12dp"
            android:translationY="5dp"
            android:backgroundTint="@color/purple"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:minHeight="28dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_goal_text"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="textEnd"
                android:text="@string/detail_activity_category"
                android:textSize="19.5sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/detail_goal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/reading"
                android:textAlignment="center"
                android:textSize="19.5sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:minHeight="28dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_goal_progress"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="textEnd"
                android:textSize="19.5sp"
                android:text="@string/progress"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/detailGoalActualProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/progress_dummy"
                android:textAlignment="center"
                android:textSize="19.5sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/deadline"
                android:textAlignment="textEnd"
                android:textSize="19.5sp"
                tools:ignore="RtlCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

            <TextView
                android:id="@+id/goal_deadline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="19.5sp"
                android:text="@string/deadline_date"
                android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailDesc"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textSize="19.5sp"
                android:layout_gravity="center"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/goalDetailDescContent"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="textStart"
                android:text="@string/tmpDesc"
                android:textSize="19.5sp"
                tools:ignore="RtlCompat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goalDetailImage"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="3dp"
                android:src="@drawable/backgroundstuffdark">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/deleteGoalBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/deleteGoal"
                app:cornerRadius="8dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>