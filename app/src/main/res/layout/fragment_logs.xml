<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationY="-3dp"
    tools:context=".Logs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:visibility="invisible" />

        <Button
            android:id="@+id/date_picker_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:backgroundTint="@color/dark_purple"
            android:drawableRight="@drawable/baseline_keyboard_arrow_down_24"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="Current Date"
            app:cornerRadius="0dp">
        </Button>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_item" />
    </LinearLayout>

    <Button
        android:id="@+id/search"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        app:icon="@drawable/baseline_find_in_page_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp" />

    <Button
        android:id="@+id/filter"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:visibility="visible"
        app:icon="@drawable/baseline_filter_list_alt_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        tools:visibility="visible" />

<!--    <Button-->
<!--        android:id="@+id/sort"-->
<!--        android:layout_width="46dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="end"-->
<!--        android:translationX="-46dp"-->
<!--        android:visibility="invisible"-->
<!--        app:icon="@drawable/baseline_filter_list_24"-->
<!--        app:iconGravity="textStart"-->
<!--        app:iconPadding="0dp"-->
<!--        tools:visibility="visible" />-->

    <Spinner
        android:id="@+id/sortSpinner"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:translationX="-46dp"
        android:visibility="visible"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        tools:visibility="visible"
        android:spinnerMode="dropdown"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addLog"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:elevation="5dp"
        android:stateListAnimator="@null"
        android:translationX="-15dp"
        android:translationY="-15dp"
        android:translationZ="-2dp"
        android:visibility="visible"
        app:cornerRadius="20dp"
        android:src="@drawable/baseline_add_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        tools:visibility="visible"
        android:contentDescription="TODO" />

</FrameLayout>